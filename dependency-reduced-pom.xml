<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>fr.panovisu</groupId>
  <artifactId>editeurPanovisu</artifactId>
  <name>editeurPanovisu</name>
  <version>2.0.0-SNAPSHOT</version>
  <description>Ã‰diteur de visites virtuelles panoramiques - Migration Java 25</description>
  <url>https://panovisu.fr</url>
  <build>
    <sourceDirectory>src</sourceDirectory>
    <resources>
      <resource>
        <targetPath>aide</targetPath>
        <directory>aide</directory>
      </resource>
      <resource>
        <targetPath>configPV</targetPath>
        <directory>configPV</directory>
      </resource>
      <resource>
        <targetPath>css</targetPath>
        <directory>css</directory>
      </resource>
      <resource>
        <targetPath>diaporama</targetPath>
        <directory>diaporama</directory>
      </resource>
      <resource>
        <targetPath>images</targetPath>
        <directory>images</directory>
      </resource>
      <resource>
        <targetPath>pagesHTML</targetPath>
        <directory>pagesHTML</directory>
      </resource>
      <resource>
        <targetPath>templates</targetPath>
        <directory>templates</directory>
      </resource>
      <resource>
        <targetPath>theme</targetPath>
        <directory>theme</directory>
      </resource>
      <resource>
        <directory>src</directory>
        <includes>
          <include>**/*.properties</include>
          <include>**/*.fxml</include>
          <include>**/*.xml</include>
          <include>**/*.html</include>
          <include>**/*.css</include>
          <include>**/*.png</include>
          <include>**/*.jpg</include>
          <include>**/*.gif</include>
        </includes>
      </resource>
    </resources>
    <plugins>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>3.13.0</version>
        <configuration>
          <source>${java.version}</source>
          <target>${java.version}</target>
          <encoding>${project.build.sourceEncoding}</encoding>
          <compilerArgs>
            <arg>--enable-preview</arg>
          </compilerArgs>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.openjfx</groupId>
        <artifactId>javafx-maven-plugin</artifactId>
        <version>0.0.8</version>
        <configuration>
          <mainClass>editeurpanovisu.EditeurPanovisu</mainClass>
          <options>
            <option>--enable-preview</option>
          </options>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>3.6.0</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <transformers>
                <transformer>
                  <mainClass>editeurpanovisu.EditeurPanovisu</mainClass>
                </transformer>
              </transformers>
              <filters>
                <filter>
                  <artifact>*:*</artifact>
                  <excludes>
                    <exclude>META-INF/*.SF</exclude>
                    <exclude>META-INF/*.DSA</exclude>
                    <exclude>META-INF/*.RSA</exclude>
                  </excludes>
                </filter>
              </filters>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <artifactId>maven-surefire-plugin</artifactId>
        <version>3.5.2</version>
        <configuration>
          <argLine>--enable-preview</argLine>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.panteleyev</groupId>
        <artifactId>jpackage-maven-plugin</artifactId>
        <version>1.6.5</version>
        <configuration>
          <name>editeurPanovisu</name>
          <appVersion>2.0.0</appVersion>
          <vendor>panoVisu</vendor>
          <destination>target/dist</destination>
          <module>editeurpanovisu/editeurpanovisu.EditeurPanovisu</module>
          <runtimeImage>target/runtime-image</runtimeImage>
          <javaOptions>
            <option>-Dfile.encoding=UTF-8</option>
            <option>--enable-preview</option>
          </javaOptions>
          <icon>images/cube2equi.png</icon>
          <winMenu>true</winMenu>
          <winShortcut>true</winShortcut>
          <linuxShortcut>true</linuxShortcut>
        </configuration>
      </plugin>
    </plugins>
  </build>
  <repositories>
    <repository>
      <id>central</id>
      <url>https://repo.maven.apache.org/maven2</url>
    </repository>
  </repositories>
  <dependencies>
    <dependency>
      <groupId>org.junit.jupiter</groupId>
      <artifactId>junit-jupiter</artifactId>
      <version>5.11.3</version>
      <scope>test</scope>
      <exclusions>
        <exclusion>
          <artifactId>junit-jupiter-params</artifactId>
          <groupId>org.junit.jupiter</groupId>
        </exclusion>
        <exclusion>
          <artifactId>junit-jupiter-engine</artifactId>
          <groupId>org.junit.jupiter</groupId>
        </exclusion>
      </exclusions>
    </dependency>
    <dependency>
      <groupId>org.junit.jupiter</groupId>
      <artifactId>junit-jupiter-api</artifactId>
      <version>5.11.3</version>
      <scope>test</scope>
      <exclusions>
        <exclusion>
          <artifactId>opentest4j</artifactId>
          <groupId>org.opentest4j</groupId>
        </exclusion>
        <exclusion>
          <artifactId>junit-platform-commons</artifactId>
          <groupId>org.junit.platform</groupId>
        </exclusion>
        <exclusion>
          <artifactId>apiguardian-api</artifactId>
          <groupId>org.apiguardian</groupId>
        </exclusion>
      </exclusions>
    </dependency>
  </dependencies>
  <properties>
    <jfxtras.version>17-r1</jfxtras.version>
    <thumbnailator.version>0.4.20</thumbnailator.version>
    <metadata.extractor.version>2.19.0</metadata.extractor.version>
    <java.version>25</java.version>
    <maven.compiler.source>${java.version}</maven.compiler.source>
    <xmp.core.version>6.1.11</xmp.core.version>
    <maven.compiler.target>${java.version}</maven.compiler.target>
    <slf4j.version>2.0.16</slf4j.version>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <javafx.version>21.0.5</javafx.version>
    <junit.version>5.11.3</junit.version>
    <javalin.version>6.3.0</javalin.version>
    <logback.version>1.5.11</logback.version>
    <commons.imaging.version>1.0.0-alpha5</commons.imaging.version>
  </properties>
</project>
